<header
  class="relative z-10 mx-auto flex min-h-[100px] max-w-[1280px] flex-row flex-nowrap justify-between border-b-[1px] border-b-white/[.1] px-[20px] align-middle"
>
  <img alt="Logo" src="/images/LogoSvg.svg" />
  <div class="flex w-auto items-center text-white">
    <div class="flex flex-row align-middle">
      <div class="hidden flex-row flex-nowrap align-middle md:flex">
        <div class="px-2.5 lg:px-6">
          <a href="#" class="nav-link">About technology</a>
        </div>
        <div class="px-2.5 lg:px-6">
          <a href="#" class="nav-link">Pricing</a>
        </div>
        <div class="px-2.5 lg:px-6">
          <a href="#" class="nav-link">Contact</a>
        </div>
      </div>
    </div>
    <div class="flex flex-row">
      <div
        class="ml-6 hidden h-[35px] items-center rounded-3xl bg-white transition-all duration-700 ease-in-out hover:bg-[#26ffb1] md:flex lg:ml-20"
      >
        <a href="#" class="inline-block px-6 font-semibold text-[#181d1f]"
          >Get Started</a
        >
      </div>
      <div class="ml-4 flex items-center">
        <div
          class="circle hidden h-[35px] w-[35px] flex-col items-center justify-center rounded-full border-[2px] border-white transition-all ease-in-out hover:rotate-45 md:flex"
        >
          <div class="dash h-[16px] w-[2px] bg-white"></div>
        </div>

        <div
          class="number relative z-10 ml-[-7px] mt-[-20px] hidden h-[18px] w-[18px] flex-col items-center justify-center rounded-full bg-red-600 text-sm md:flex"
        >
          3
        </div>
        <div class="burger ml-6 flex h-[12px] flex-col items-end align-middle">
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .nav-link {
    @apply align-middle text-sm transition-all duration-1000 ease-in-out after:mt-[3px] after:block after:h-[2px] after:w-0 after:bg-white after:transition-all after:duration-300 after:ease-in-out hover:after:w-full;
  }
  .burger {
    @apply before:block before:h-[2px] before:w-[40px] before:bg-white after:mt-[5px] after:block after:h-[2px] after:w-[40px] after:items-end after:bg-white after:transition-all after:ease-in-out hover:after:w-[20px];
  }
</style>
