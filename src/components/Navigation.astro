<header
  class="container flex flex-row flex-nowrap justify-between align-middle border-b-[1px] border-b-white/[.1] min-h-[100px]"
>
  <img alt="Logo" src="/images/LogoSvg.svg" />
  <div class="text-white w-auto flex items-center">
    <div class="flex flex-row align-middle">
      <div class="flex flex-row flex-nowrap align-middle">
        <div class="mx-6">
          <a href="#" class="nav-link">About technology</a>
        </div>
        <div class="px-6">
          <a href="#" class="nav-link">Pricing</a>
        </div>
        <div class="px-6">
          <a href="#" class="nav-link">Contact</a>
        </div>
      </div>
    </div>
    <div class="flex flex-row">
      <div
        class="ml-20 flex items-center h-[35px] bg-white rounded-3xl hover:bg-[#26ffb1]"
      >
        <a href="#" class="inline-block text-[#181d1f] px-6 font-semibold"
          >Get Started</a
        >
      </div>
      <div class="ml-4 flex">
        <div
          class="circle h-[35px] w-[35px] border-white rounded-full border-[2px] flex flex-col justify-center items-center transition-all ease-in-out hover:rotate-45"
        >
          <div class="dash bg-white w-[2px] h-[16px]"></div>
        </div>
        <div>
          <p
            class="number bg-red-600 rounded-full h-[18px] w-[18px] flex flex-col ml-[-7px] text-sm justify-center items-center relative z-10"
          >
            3
          </p>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .nav-link {
    @apply align-middle;
  }
  .nav-link:after {
    @apply block h-[2px] bg-white mt-[3px] transition-all w-0 ease-in-out;
    content: "";
  }
  .nav-link:hover:after {
    @apply w-full;
  }
</style>
